@{
    ViewBag.Title = "Home";
}

@section scripts {
    <style type="text/css">
        .jumbotron {
           margin: 10px 0px 10px 0px;
           background: #ffffff;
        }
        
        div {
            box-sizing: border-box !important;
        }
        .col-md-6 {
            transition: all .5s ease;
            background-color:rgba(255,255,255,0.75);
            padding: 30px 20px 30px 20px;
            box-sizing: border-box !important;
            
        }

        .col-md-6:hover {
           
            margin-top: 10px;
            background: #ffffff;
        }

        .row {
            text-align: center !important;
        }

        .row a {
            display: block;
            color: #333333 !important;
        }

        .row a:hover {
            text-decoration: none;
            color: #a0bc6f !important;
        }

       

        body { 
            background: url("http://i63.tinypic.com/jfwaqv.jpg") no-repeat center center fixed; 
            background-size: cover;
}

        footer {
            color: #ffffff !important;
        }
    </style>

}
<div class="jumbotron">
    <h1 style="text-align: center;">Welcome to GeoJob.</h1>
    <p class ="lead" style="text-align: center;">
        Need a babysitter, moving help, lawn care, or all three? Hire the help you need today.
    </p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <a href="@Url.Action("Create", "Jobs")">
                <h1 style="text-align: center;"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h1>
                    <h1 style="text-align: center;">Create</h1>
                    <p style="text-align: center;">Create a job listing.</p>
            </a>
        </div>

            <div class="col-md-6">
                <a href="@Url.Action("Index", "Jobs")">
                    <h1 style="text-align: center;"><span class="glyphicon glyphicon-envelope"></span></h1>
                    <h1 style="text-align: center;">Apply</h1>
                    <p style="text-align: center;">Find and apply for a job.</p>
               </a>
            </div>
</div>
</div>
